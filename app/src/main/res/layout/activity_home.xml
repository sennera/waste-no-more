<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cookie_computing.wastenomore.ActivityHome" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView2"
            android:src="@drawable/green_chart"
            android:layout_marginRight="15dp"/>

        <TextView android:text="@string/app_name"
            android:textSize="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"/>

        </LinearLayout>

    <!--<Button-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin="8dp"-->
        <!--android:paddingLeft="15sp"-->
        <!--android:drawablePadding="10dip"-->
        <!--android:gravity="left|center_vertical"-->
        <!--android:text="@string/check_in"-->
        <!--android:textSize="30sp"-->
        <!--android:id="@+id/checkInButton"-->
        <!--android:drawableLeft="@drawable/check"-->
        <!--android:onClick="goToCheckIn"/>-->

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:drawablePadding="10dip"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/silver_trash"
        android:textSize="30sp"
        android:text="@string/trash"
        android:id="@+id/button"
        android:onClick="goToTrash"
        android:layout_weight="1"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:drawablePadding="10dip"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/droplet"
        android:textSize="30sp"
        android:text="@string/water"
        android:id="@+id/button2"
        android:onClick="goToWater"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:drawablePadding="10dip"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/gas_pump"
        android:textSize="30sp"
        android:text="@string/gas"
        android:id="@+id/button4"
        android:onClick="goToGas"
        android:layout_weight="1" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/why"
        android:id="@+id/button3"
        android:onClick="goToWhy"
        android:layout_weight="0" />

</LinearLayout>
