<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cookie_computing.wastenomore.TrashFact"
    android:weightSum="1">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:gravity="center"
    android:textStyle="bold"
    android:text="@string/trash_quote"
    android:textColor="@color/light_green"
    android:id="@+id/trash_quote" />

<Space
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.05" />

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="25dp"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/trashFact"
    android:layout_marginTop="46dp"
    android:layout_below="@+id/trash_quote"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:text="Trash Fact" />

<Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.05" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/next_fact"
    android:id="@+id/nextTipButton"
    android:onClick="nextFact"
    android:layout_gravity="center_horizontal"
    android:layout_below="@+id/trashFact"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="46dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/back_home"
    android:id="@+id/homeButton"
    android:onClick="goHome"
    android:layout_gravity="center_horizontal"
    android:layout_below="@+id/nextTipButton"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp" />

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/trashFactSource"
    android:text="Trash Fact Source"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

</RelativeLayout>
